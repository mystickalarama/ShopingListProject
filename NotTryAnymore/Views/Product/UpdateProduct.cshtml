@model ProductModel

<form class="form-group" asp-action="UpdateProducts" asp-controller="Product" method="post" enctype="multipart/form-data">
	<div style="margin-bottom:15px">
		@Html.HiddenFor(s => s.ProductId)
		@Html.LabelFor(a => a.ProductName)
		@Html.TextBoxFor(a => a.ProductName, new { @class="form-control" })
	</div>
	<div style="margin-bottom:15px">
		@Html.Label("Category")
		@Html.DropDownListFor(a => a.CategoryId, (List<SelectListItem>)ViewBag.CategoryList, new { @class="form-control" })
	</div>
	<div style="margin-bottom:15px">
		@Html.Label("Upload Image")
		<input type="file" name="ImageURL" class="form-control" />
	</div>
	<button class="btn btn-success">Update</button>
</form>